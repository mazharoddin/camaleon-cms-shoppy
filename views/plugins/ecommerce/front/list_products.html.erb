<section>
<div class="container">
  <div class="row">

    <div class="col-sm-14">
      <div class="features_items"><!--features_items-->
        <h2 class="title text-center">All Products</h2>

            <% current_site.the_posts("commerce").latest.decorate.each do |post| %>
