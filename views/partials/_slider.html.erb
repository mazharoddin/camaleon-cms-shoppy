                  <p><%= raw current_theme.the_field("slider_1_description") %> </p>
                  <a href="<%= raw current_theme.the_field("slider_1_link") %>" class="btn btn-default get"> Get it now</a>
								</div>
								<div class="col-sm-6">
                  <img src="<%= raw current_theme.the_field("slider_1_image") %>" class="girl img-responsive" alt="" />
								</div>
							</div>
							<div class="item">
								<div class="col-sm-6">
                  <h1><%= raw current_theme.the_field("slider_2_header") %></h1>
                  <h2><%= raw current_theme.the_field("slider_2_sub_header") %></h2>
                  <p><%= raw current_theme.the_field("slider_2_description") %></p>
                  <a href="<%= raw current_theme.the_field("slider_2_link") %>" class="btn btn-default get"> Get it now</a>
